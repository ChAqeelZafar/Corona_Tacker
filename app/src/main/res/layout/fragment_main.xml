<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="0"
            android:background="@color/text_background_grey"
            android:gravity="center"
            android:text="@string/main_heading"
            android:textColor="@color/main_heading_grey"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/main_text_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="0"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/main_timing_grey"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/main_textbtn_cases"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/cases"
                android:textColor="@android:color/holo_green_light" />

            <TextView
                android:id="@+id/main_textbtn_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/country"
                android:textColor="@android:color/holo_green_light" />

            <TextView
                android:id="@+id/main_textbtn_updates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/updates"
                android:textColor="@android:color/holo_green_light" />

            <TextView
                android:id="@+id/main_textbtn_symptoms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/symptoms"
                android:textColor="@android:color/holo_green_light" />
        </LinearLayout>

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0"
            android:background="?android:attr/listDivider" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:layout_weight="0"
            android:background="@color/text_background_grey"
            android:padding="5dp"
            app:cardBackgroundColor="@color/text_background_grey"
            app:cardCornerRadius="5dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="Coronavirus Cases:"
                    android:textColor="@color/number_heading"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/main_text_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:gravity="center"
                    android:text="179,814"
                    android:textColor="@color/total_number"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/main_textbtn_iewbycountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:gravity="center"
                    android:text="@string/view_by_country" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="Deaths:"
                    android:textColor="@color/number_heading"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/main_text_deaths"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:gravity="center"
                    android:text="179,814"
                    android:textColor="@color/death_number"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="Recovered:"
                    android:textColor="@color/number_heading"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/main_text_recovered"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="179,814"
                    android:textColor="@color/recovered_number"
                    android:textSize="40sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:layout_weight="0"
            android:background="@color/text_background_grey"
            android:padding="5dp"
            app:cardBackgroundColor="@color/text_background_grey"
            app:cardCornerRadius="5dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView45"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="ACTIVE CASES"
                    android:textColor="@color/number_heading"
                    android:textSize="40sp" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/main_text_activecases"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:gravity="center"
                    android:text="179,814"
                    android:textColor="@color/death_number"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="Currently Infected Patients" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/main_text_mini_serious_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:text="23%"
                        app:layout_constraintBottom_toBottomOf="@+id/main_text_mini_serious"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@+id/divider" />

                    <TextView
                        android:id="@+id/main_text_mini_serious"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:text="88,289"
                        android:textColor="@color/red"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toStartOf="@+id/main_text_mini_serious_percent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/main_text_mini_mild"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:text="88,289"
                        android:textColor="@color/purple"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toStartOf="@+id/divider"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/main_text_mini_mild_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:text="76%"
                        app:layout_constraintBottom_toBottomOf="@+id/main_text_mini_mild"
                        app:layout_constraintStart_toEndOf="@+id/main_text_mini_mild" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="in Mild Condition"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toEndOf="@+id/main_text_mini_mild_percent"
                        app:layout_constraintStart_toStartOf="@+id/main_text_mini_mild"
                        app:layout_constraintTop_toBottomOf="@+id/main_text_mini_mild" />

                    <View
                        android:id="@+id/divider"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:background="?android:attr/listDivider"
                        app:layout_constraintBottom_toBottomOf="@+id/textView14"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/main_text_mini_mild" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Serious or Critical"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toEndOf="@+id/main_text_mini_serious_percent"
                        app:layout_constraintStart_toStartOf="@+id/main_text_mini_serious"
                        app:layout_constraintTop_toBottomOf="@+id/main_text_mini_serious" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:layout_weight="0"
            android:background="@color/text_background_grey"
            android:padding="5dp"
            app:cardBackgroundColor="@color/text_background_grey"
            app:cardCornerRadius="5dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView44"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="CLOSED CASES"
                    android:textColor="@color/number_heading"
                    android:textSize="40sp" />

                <View
                    android:id="@+id/divider22"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/main_text_closedcases"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:gravity="center"
                    android:text="179,814"
                    android:textColor="@color/death_number"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView122"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="Cases which had an outcome:" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/main_text_mini_deaths_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:text="23%"
                        app:layout_constraintBottom_toBottomOf="@+id/main_text_mini_deaths"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@+id/divider231" />

                    <TextView
                        android:id="@+id/main_text_mini_deaths"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:text="88,289"
                        android:textColor="?android:attr/textColorPrimaryNoDisable"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toStartOf="@+id/main_text_mini_deaths_percent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/main_text_mini_recovered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:text="88,289"
                        android:textColor="@color/recovered_number"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toStartOf="@+id/divider231"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/main_text_mini_recovered_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:text="76%"
                        app:layout_constraintBottom_toBottomOf="@+id/main_text_mini_recovered"
                        app:layout_constraintStart_toEndOf="@+id/main_text_mini_recovered" />

                    <TextView
                        android:id="@+id/textView144"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Recovered / Discharged"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toEndOf="@+id/main_text_mini_recovered_percent"
                        app:layout_constraintStart_toStartOf="@+id/main_text_mini_recovered"
                        app:layout_constraintTop_toBottomOf="@+id/main_text_mini_recovered" />

                    <View
                        android:id="@+id/divider231"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:background="?android:attr/listDivider"
                        app:layout_constraintBottom_toBottomOf="@+id/textView144"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/main_text_mini_recovered" />

                    <TextView
                        android:id="@+id/textView166"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Deaths"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toEndOf="@+id/main_text_mini_deaths_percent"
                        app:layout_constraintStart_toStartOf="@+id/main_text_mini_deaths"
                        app:layout_constraintTop_toBottomOf="@+id/main_text_mini_deaths" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/main_textbtn_bottom_cases"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/cases"
                android:textColor="@android:color/holo_green_light" />

            <TextView
                android:id="@+id/main_textbtn_bottom_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/country"
                android:textColor="@android:color/holo_green_light" />

            <TextView
                android:id="@+id/main_textbtn_bottom_updates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/updates"
                android:textColor="@android:color/holo_green_light" />

            <TextView
                android:id="@+id/main_textbtn_bottom_symptoms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/symptoms"
                android:textColor="@android:color/holo_green_light" />
        </LinearLayout>

        <View
            android:id="@+id/divider33"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0"
            android:background="?android:attr/listDivider" />

    </LinearLayout>
</ScrollView>